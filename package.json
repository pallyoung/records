{
  "name": "life-records",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --config app/vite.config.ts",
    "build": "tsc -b app/tsconfig.json && vite build --config app/vite.config.ts",
    "lint": "biome lint app/src app/vite.config.ts",
    "format": "biome format --write app/src app/vite.config.ts",
    "prepare": "husky",
    "preview": "vite preview --config app/vite.config.ts"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@relax-state/react": "^0.0.8",
    "dexie": "^4.3.0",
    "echarts": "^6.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@playwright/test": "^1.58.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "sass": "^1.97.3",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "biome check --write"
    ]
  }
}
